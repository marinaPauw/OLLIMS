
@model InstrumentCatalogueViewModel
@{
    ViewData["Title"] = "Instruments";
}

<div class="text-center">
    <h2 class="display-4">All instruments loaded to LIMS:</h2>
</div>
<div class="card-columns">
    @if(Model.instruments.Count()>0){
        @foreach (var item in Model.instruments)
        {
            <div class="card">
                <div class="card-body">
                    <a class="card-title" asp-action="Instrument"
                       asp-controller="Home"
                       asp-route-id="@item.ID">@item.Name</a>

                </div>
            </div>
        }
    }
    else
        {
        <h5>No instruments to display.</h5>
        }
<div class="sidenav">
    <a href="#">Add new</a>
    <a href="#">Daily verification</a>
    <a asp-action="Instruments"
       asp-controller="Home">Instruments</a>
    <<a asp-action="Laboratories"
        asp-controller="Home">Laboratories</a>
</div>
</div>


